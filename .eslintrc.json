{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "ts": "never"
            }
          ],
      "import/prefer-default-export": "off",
      "lines-between-class-members": "off",
      "max-len": "off"
    },
    "settings": {
        "import/extensions": [
          ".js",
          ".ts"
        ],
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
          },
          "typescript": {}
        }
      }
}
