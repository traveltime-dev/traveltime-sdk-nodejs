{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
      "@typescript-eslint/no-var-requires": "off",
      "import/extensions": [
          "error",
          "ignorePackages",
          {
            "js": "never",
            "ts": "never"
          }
        ],
      "import/prefer-default-export": "off",
      "lines-between-class-members": "off",
      "max-len": "off"
    },
    "settings": {
        "import/extensions": [
          ".js",
          ".ts"
        ],
        "import/resolver": {
          "node": {
            "extensions": [".js", ".ts"]
          },
          "typescript": {}
        }
      }
}
